<section id="wizard" class="tab-pane active">
    <div class="panel">
        <div id="form-wizard" class="wizard clearfix">
            <ul class="steps">
                <li class="active" data-target="#step1">
                    <span class="badge badge-info">
                        1
                    </span>
                    Step 1
                </li>
                <li data-target="#step2">
                    <span class="badge">
                        2
                    </span>
                    Step 2
                </li>
                <li data-target="#step3">
                    <span class="badge">
                        3
                    </span>
                    Step 3
                </li>
            </ul>
        </div>
        <div class="step-content">
            <form>
                <div id="step1" class="step-pane active">
                    <p>
                        Your website:
                    </p>
                    <input type="text" placeholder="website" data-type="url" data-required="true"
                           data-trigger="change" class="form-control">
                    <p class="m-t">
                        Your email:
                    </p>
                    <input type="text" placeholder="email address" data-type="email" data-required="true"
                           data-trigger="change" class="form-control">
                </div>
                <div id="step2" class="step-pane">
                    <p>
                        Your email:
                    </p>
                    <input type="text" placeholder="email address" data-type="email" data-required="true"
                           data-trigger="change" class="form-control">
                </div>
                <div id="step3" class="step-pane">
                    This is step 3
                </div>
            </form>
            <div class="actions m-t">
                <button disabled="disabled" data-wizard="previous" data-target="#form-wizard"
                        class="btn btn-white btn-sm btn-prev" type="button">
                    Prev
                </button>
                <button data-last="Finish" data-wizard="next" data-target="#form-wizard"
                        class="btn btn-white btn-sm btn-next" type="button">
                    Next
                </button>
            </div>
        </div>
    </div>
</section>